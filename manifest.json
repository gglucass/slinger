{
  "manifest_version": 2,

  "name": "Slinger",
  "description": "This extension scrapes LinkedIn.",
  "version": "1.0",

  "content_scripts": [ {
    "js": [ "slinger.js" ],    
    "matches": [ "http://*/*", "https://*/*"]
  }],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "https://www.linkedin.com/",
    "http://www.linkedin.com/",
    "tabs"
  ]
}
